<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CountMonthMapper">
	
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into TB_COUNT_MONTH(
			USER_ID,	
			WEBCHAT_ID,	
			USERS,	
			RECHARGES,
			RECHARGETIMES,
			RECHARGEUSERS,	
			CONSUMES,	
			MONEY,	
			CONSUMENUMBER,
			COUNT_MONTH,	
			CREATE_TIME,	
			UPDATE_TIME,
			BOOK_CURRENCY,
			BOOK_CURRENCY_GIFT	
		) values (
			#{USER_ID},	
			#{WEBCHAT_ID},	
			#{USERS},	
			#{RECHARGES},
			#{RECHARGETIMES},
			#{RECHARGEUSERS},	
			#{CONSUMES},	
			#{MONEY},
			#{CONSUMENUMBER},	
			#{COUNT_MONTH},	
			#{CREATE_TIME},	
			#{UPDATE_TIME},
			#{BOOK_CURRENCY},
			#{BOOK_CURRENCY_GIFT}	
		)
	</insert>
	
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from TB_COUNT_MONTH
		where 
			COUNT_MONTH_ID = #{COUNT_MONTH_ID}
	</delete>
	
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update  TB_COUNT_MONTH
			set 
				USER_ID = #{USER_ID},
				WEBCHAT_ID = #{WEBCHAT_ID},
				USERS = #{USERS},
				RECHARGES = #{RECHARGES},
				RECHARGETIMES = #{RECHARGETIMES},
				RECHARGEUSERS = #{RECHARGEUSERS},
				CONSUMES = #{CONSUMES},
				MONEY = #{MONEY},
				CONSUMENUMBER = #{CONSUMENUMBER},
				COUNT_MONTH = #{COUNT_MONTH},
				CREATE_TIME = #{CREATE_TIME},
				UPDATE_TIME = #{UPDATE_TIME},
				BOOK_CURRENCY = #{BOOK_CURRENCY},
				BOOK_CURRENCY_GIFT = #{BOOK_CURRENCY_GIFT}
			where 
				COUNT_MONTH_ID = #{COUNT_MONTH_ID}
	</update>
	
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
			COUNT_MONTH_ID,	
			USER_ID,	
			WEBCHAT_ID,	
			USERS,	
			RECHARGES,
			RECHARGETIMES,
			RECHARGEUSERS,	
			CONSUMES,	
			MONEY,	
			CONSUMENUMBER,
			COUNT_MONTH,	
			CREATE_TIME,	
			UPDATE_TIME,
			BOOK_CURRENCY,
			BOOK_CURRENCY_GIFT
		from 
			TB_COUNT_MONTH
		where 
			COUNT_MONTH_ID = #{COUNT_MONTH_ID}
	</select>
	
	
	<!-- 查询总数据 -->
	<select id="countUsersAll" parameterType="pd" resultType="pd">
		select
				IFNULL(sum(a.USERS),0) USERS,
				IFNULL(sum(a.RECHARGES),0) RECHARGES,
				IFNULL(sum(a.RECHARGETIMES),0) RECHARGETIMES,
				IFNULL(sum(a.MONEY),0) MONEY,
				IFNULL(sum(a.CONSUMENUMBER),0) CONSUMENUMBER
		from 
				TB_COUNT_MONTH a 
	</select>
	
	<!-- 查询指定渠道总数据 -->
	<select id="countMonthqdAll" parameterType="pd" resultType="pd">
		select
				IFNULL(sum(RECHARGES),0) RECHARGES
		from 
				TB_COUNT_MONTH 
		where
				USER_ID = #{USER_ID}
				<if test="TIME!=null and TIME!=''">
					AND COUNT_MONTH = #{TIME}
				</if>
	</select>
	
	
	<!-- 获取本月数据 -->
	<select id="countMonth" parameterType="pd" resultType="pd">
		select 
			COUNT_MONTH_ID,	
			USER_ID,	
			WEBCHAT_ID,	
			USERS,	
			RECHARGES,
			RECHARGETIMES,
			RECHARGEUSERS,
			CONSUMES,	
			MONEY,
			CONSUMENUMBER,	
			COUNT_MONTH,	
			CREATE_TIME,	
			UPDATE_TIME,
			BOOK_CURRENCY,
			BOOK_CURRENCY_GIFT
		from 
			TB_COUNT_MONTH
		where 
			COUNT_MONTH = #{COUNT_MONTH}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
				a.COUNT_MONTH_ID,	
				a.USER_ID,	
				a.WEBCHAT_ID,	
				a.USERS,	
				a.RECHARGES,
				a.RECHARGETIMES,
				a.RECHARGEUSERS,	
				a.CONSUMES,	
				a.MONEY,
				a.CONSUMENUMBER,	
				a.COUNT_MONTH,	
				a.CREATE_TIME,	
				a.UPDATE_TIME,
				a.BOOK_CURRENCY,
				a.BOOK_CURRENCY_GIFT
		from 
				TB_COUNT_MONTH a
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
				a.COUNT_MONTH_ID,	
				a.USER_ID,	
				a.WEBCHAT_ID,	
				a.USERS,	
				a.RECHARGES,
				a.RECHARGETIMES,
				a.RECHARGEUSERS,	
				a.CONSUMES,	
				a.MONEY,
				a.CONSUMENUMBER,	
				a.COUNT_MONTH,	
				a.CREATE_TIME,	
				a.UPDATE_TIME,
				a.BOOK_CURRENCY,
				a.BOOK_CURRENCY_GIFT
		from 
				TB_COUNT_MONTH a
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from TB_COUNT_MONTH
		where 
			COUNT_MONTH_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 充值图表数据（近12个月————一年） -->
	<select id="date" parameterType="pd" resultType="pd">
		SELECT 
			RECHARGES,
			COUNT_MONTH
		FROM 
			tb_count_month 
		where 
			<![CDATA[   
				COUNT_MONTH <= (
					SELECT
						COUNT_MONTH
					FROM
						tb_count_month
						ORDER BY COUNT_MONTH DESC
						LIMIT 1
				)
			]]>  
			ORDER BY COUNT_MONTH DESC
			LIMIT 12
	</select>
	
	
	<!-- 渠道充值图表数据（近12个月————一年） -->
	<select id="sysuserdate" parameterType="pd" resultType="pd">
		SELECT 
			RECHARGES,
			COUNT_MONTH
		FROM 
			tb_count_month 
		where USER_ID = #{USER_ID} AND
			<![CDATA[   
				COUNT_MONTH <= (
					SELECT
						COUNT_MONTH
					FROM 
						tb_count_month
						where USER_ID = #{USER_ID}
						ORDER BY COUNT_MONTH DESC
						LIMIT 1
				)
			]]>  
			ORDER BY COUNT_MONTH DESC
			LIMIT 12
	</select>
	
	
	<!-- 统计渠道这个月的充值总额 -->
	<select id="channelSumToMonth" parameterType="pd" resultType="pd">
		select 
			IFNULL(SUM(RECHARGES),0)RECHARGES
		from 
			TB_COUNT_MONTH
		where 
				USER_ID = #{USER_ID}
				AND COUNT_MONTH LIKE CONCAT(CONCAT('', #{COUNT_MONTH}),'%')
	</select>
	
	<!--指定渠道月充值统计-->
	<select id="channelcountMonthlistPage" parameterType="page" resultType="pd">
		select
				a.COUNT_MONTH_ID,	
				a.USER_ID,	
				a.WEBCHAT_ID,	
				a.USERS,	
				a.RECHARGES,
				a.RECHARGETIMES,
				a.RECHARGEUSERS,	
				a.CONSUMES,	
				a.MONEY,
				a.CONSUMENUMBER,	
				a.COUNT_MONTH,	
				a.CREATE_TIME,	
				a.UPDATE_TIME,
				a.BOOK_CURRENCY,
				a.BOOK_CURRENCY_GIFT
		from 
				TB_COUNT_MONTH a
		where
				a.USER_ID = #{pd.USER_ID}
				ORDER BY a.COUNT_MONTH DESC
	</select>
	
	<!--指定渠道月充值统计到处Excel-->
	<select id="channelcountMonthlistExcel" parameterType="pd" resultType="pd">
		select
				a.COUNT_MONTH_ID,	
				a.USER_ID,	
				a.WEBCHAT_ID,	
				a.USERS,	
				a.RECHARGES,
				a.RECHARGETIMES,
				a.RECHARGEUSERS,	
				a.CONSUMES,	
				a.MONEY,
				a.CONSUMENUMBER,	
				a.COUNT_MONTH,	
				a.CREATE_TIME,	
				a.UPDATE_TIME,
				a.BOOK_CURRENCY,
				a.BOOK_CURRENCY_GIFT
		from 
				TB_COUNT_MONTH a
		where
				a.USER_ID = #{USER_ID}
				<if test="sendTimeBegin!=null and sendTimeBegin!='' ">
					AND a.COUNT_MONTH>=#{sendTimeBegin}
				</if>
				<if test="sendTimeEnd!=null and sendTimeEnd!='' ">
					 <![CDATA[   
						AND a.COUNT_MONTH <= #{sendTimeEnd}
					 ]]>   
				</if>
				ORDER BY a.COUNT_MONTH DESC
	</select>
	
	<!-- 统计渠道到当前月份的充值总额 -->
	<select id="channelMonthSum" parameterType="pd" resultType="pd">
		select 
			IFNULL(SUM(RECHARGES),0)RECHARGES
		from 
			TB_COUNT_MONTH
		where USER_ID = #{USER_ID}
			<![CDATA[   
				AND COUNT_MONTH = #{COUNT_MONTH}
			]]>   
	</select>
	
</mapper>