<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardMapper">
	
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into TB_BOARD(
			BOARD_NO,	
			BOARD_NAME,	
			BOARD_IMG,	
			SORT,	
			CREATE_TIME,
			RANKING_NUMBER,
			CLICK_NUMBER 
		) values (
			#{BOARD_NO},	
			#{BOARD_NAME},	
			#{BOARD_IMG},	
			#{SORT},	
			#{CREATE_TIME},
			#{RANKING_NUMBER},
			#{CLICK_NUMBER} 
		)
	</insert>
	
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from TB_BOARD
		where 
			BOARD_ID = #{BOARD_ID}
	</delete>
	
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update  TB_BOARD
			set 
				BOARD_NO = #{BOARD_NO},
				BOARD_NAME = #{BOARD_NAME},
				BOARD_IMG = #{BOARD_IMG},
				SORT = #{SORT},
				RANKING_NUMBER = #{RANKING_NUMBER},
				CLICK_NUMBER = {CLICK_NUMBER}
			where 
				BOARD_ID = #{BOARD_ID}
	</update>
	
	<!-- 修改榜单排名数量 -->
	<update id="editRankingnum" parameterType="pd">
		update  TB_BOARD
			set 
				RANKING_NUMBER = #{RANKING_NUMBER}
			where 
				BOARD_ID = #{BOARD_ID}
	</update>
	
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
			BOARD_NO,	
			BOARD_NAME,	
			BOARD_IMG,	
			SORT,	
			CREATE_TIME,	
			BOARD_ID,
			RANKING_NUMBER,
			CLICK_NUMBER
		from 
			TB_BOARD
		where 
			BOARD_ID = #{BOARD_ID}
	</select>
	
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
				a.BOARD_NO,	
				a.BOARD_NAME,	
				a.BOARD_IMG,	
				a.SORT,	
				a.CREATE_TIME,	
				a.BOARD_ID,
				a.RANKING_NUMBER,
				a.CLICK_NUMBER
		from 
				TB_BOARD a
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
				a.BOARD_NO,	
				a.BOARD_NAME,	
				a.BOARD_IMG,	
				a.SORT,	
				a.CREATE_TIME,	
				a.BOARD_ID,
				a.RANKING_NUMBER,
				a.CLICK_NUMBER
		from 
				TB_BOARD a
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from TB_BOARD
		where 
			BOARD_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
</mapper>