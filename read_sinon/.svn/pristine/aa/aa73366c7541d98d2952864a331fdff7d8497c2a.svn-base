<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BookshelfMapper">
	
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into TB_BOOKSHELF(
			ARTICLE_ID,	
			USERID,	
			USER_ID,	
			ARTICLE_CHAPTER_ID,	
			CREATE_TIME 
		) values (
			#{ARTICLE_ID},	
			#{USERID},	
			#{USER_ID},	
			#{ARTICLE_CHAPTER_ID},	
			#{CREATE_TIME} 
		)
	</insert>
	
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from TB_BOOKSHELF
		where 
			BOOKSHELF_ID = #{BOOKSHELF_ID}
	</delete>
	
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update  TB_BOOKSHELF
			set 
				ARTICLE_ID = #{ARTICLE_ID},
				USERID = #{USERID},
				USER_ID = #{USER_ID},
				ARTICLE_CHAPTER_ID = #{ARTICLE_CHAPTER_ID},
				UPDATE_TIME = #{UPDATE_TIME},
			BOOKSHELF_ID = BOOKSHELF_ID
			where 
				BOOKSHELF_ID = #{BOOKSHELF_ID}
	</update>
	
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
			ARTICLE_ID,	
			USERID,	
			USER_ID,	
			ARTICLE_CHAPTER_ID,	
			CREATE_TIME,	
			UPDATE_TIME,	
			BOOKSHELF_ID
		from 
			TB_BOOKSHELF
		where 
			BOOKSHELF_ID = #{BOOKSHELF_ID}
	</select>
	
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
				a.ARTICLE_ID,	
				a.USERID,	
				a.USER_ID,	
				a.ARTICLE_CHAPTER_ID,	
				a.CREATE_TIME,	
				a.UPDATE_TIME,	
				a.BOOKSHELF_ID
		from 
				TB_BOOKSHELF a
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
				a.ARTICLE_ID,	
				a.USERID,	
				a.USER_ID,	
				a.ARTICLE_CHAPTER_ID,	
				a.CREATE_TIME,	
				a.UPDATE_TIME,	
				a.BOOKSHELF_ID
		from 
				TB_BOOKSHELF a
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from TB_BOOKSHELF
		where 
			BOOKSHELF_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
</mapper>