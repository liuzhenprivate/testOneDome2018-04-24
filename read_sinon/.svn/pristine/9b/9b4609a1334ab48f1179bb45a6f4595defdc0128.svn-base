<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="WebchatMenuMapper">
	
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into TB_WEBCHATMENU(
			WEBCHAT_ID,	
			TYPE,	
			NAME,	
			MENUURL,	
			SOURT,	
			PID,	
			CREATE_TIME 	
		) values (
			#{WEBCHAT_ID},	
			'view',	
			#{NAME},	
			#{MENUURL},	
			#{SOURT},	
			#{PID},	
			#{CREATE_TIME} 
		)
	</insert>
	
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from TB_WEBCHATMENU
		where 
			WEBCHATMENU_ID = #{WEBCHATMENU_ID}
	</delete>
	<!-- 删除-->
	<delete id="deleteByPID" parameterType="pd">
		delete from TB_WEBCHATMENU
		where 
			PID = #{PID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update  TB_WEBCHATMENU
			set 
			<if test="NAME!= null and  NAME!= ''">
				NAME = #{NAME},
			</if>
			<if test="MENUURL!= null and  MENUURL!= ''">
				MENUURL = #{MENUURL},
			</if>
			<if test="SOURT!= null and  SOURT!= ''">
				SOURT = #{SOURT},
			</if>
			<if test="PID != null and  PID!= ''">
				PID = #{PID},
			</if>
			WEBCHATMENU_ID = WEBCHATMENU_ID
			where 
				WEBCHATMENU_ID = #{WEBCHATMENU_ID}
	</update>
	
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
			WEBCHAT_ID,	
			TYPE,	
			NAME,	
			MENUURL,	
			SOURT,	
			PID,	
			CREATE_TIME,	
			WEBCHATMENU_ID
		from 
			TB_WEBCHATMENU
		where 
			WEBCHATMENU_ID = #{WEBCHATMENU_ID}
	</select>
	
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
				a.WEBCHAT_ID,	
				a.TYPE,	
				a.NAME,	
				a.MENUURL,	
				a.SOURT,	
				a.PID,	
				a.CREATE_TIME,	
				a.WEBCHATMENU_ID
		from 
				TB_WEBCHATMENU a
		WHERE   1=1
				<if test="pd.WEBCHAT_ID != null and  pd.WEBCHAT_ID != ''">
				and a.WEBCHAT_ID=#{pd.WEBCHAT_ID}
				</if>
				<if test="pd.SOURT != null and  pd.SOURT!= ''">
				and a.SOURT=#{pd.SOURT}
				</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
				a.WEBCHAT_ID,	
				a.TYPE,	
				a.NAME,	
				a.MENUURL,	
				a.SOURT,	
				a.PID,	
				a.CREATE_TIME,	
				a.WEBCHATMENU_ID
		from 
				TB_WEBCHATMENU a
		WHERE   1=1
				<if test="WEBCHAT_ID != null and  WEBCHAT_ID != ''">
				and a.WEBCHAT_ID=#{WEBCHAT_ID}
				</if>
				<if test="SOURT != null and  SOURT!= ''">
				and a.SOURT=#{SOURT}
				</if>
				<if test="PID != null and  PID!= ''">
				and a.PID=#{PID}
				</if>
				order by a.SOURT asc
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from TB_WEBCHATMENU
		where 
			WEBCHATMENU_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
</mapper>