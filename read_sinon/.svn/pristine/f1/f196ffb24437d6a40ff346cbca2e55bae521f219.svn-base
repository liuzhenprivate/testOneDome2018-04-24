<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ArticleChapterlogMapper">
	
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into TB_ARTICLE_CHAPTERLOG(
			ARTICLE_ID,	
			ARTICLELOG_ID,	
			CHAPTER_NAME,	
			USERID,	
			USER_ID,	
			WEBCHAT_ID,	
			CREATE_TIME,	
			FEE	
		) values (
			#{ARTICLE_ID},	
			#{ARTICLELOG_ID},	
			#{CHAPTER_NAME},	
			#{USERID},	
			#{USER_ID},	
			#{WEBCHAT_ID},	
			#{CREATE_TIME},	
			#{FEE}	
		)
	</insert>
	
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from TB_ARTICLE_CHAPTERLOG
		where 
			ARTICLE_CHAPTERLOG_ID = #{ARTICLE_CHAPTERLOG_ID}
	</delete>
	
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update  TB_ARTICLE_CHAPTERLOG
			set 
				ARTICLE_ID = #{ARTICLE_ID},
				ARTICLELOG_ID = #{ARTICLELOG_ID},
				CHAPTER_NAME = #{CHAPTER_NAME},
				USERID = #{USERID},
				USER_ID = #{USER_ID},
				WEBCHAT_ID = #{WEBCHAT_ID},
				CREATE_TIME = #{CREATE_TIME},
				FEE = #{FEE}
			where 
				ARTICLE_CHAPTERLOG_ID = #{ARTICLE_CHAPTERLOG_ID}
	</update>
	
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
			ARTICLE_CHAPTERLOG_ID,	
			ARTICLE_ID,	
			ARTICLELOG_ID,	
			CHAPTER_NAME,	
			USERID,	
			USER_ID,	
			WEBCHAT_ID,	
			CREATE_TIME,	
			FEE
		from 
			TB_ARTICLE_CHAPTERLOG
		where 
			ARTICLE_CHAPTERLOG_ID = #{ARTICLE_CHAPTERLOG_ID}
	</select>
	
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
				a.ARTICLE_CHAPTERLOG_ID,	
				a.ARTICLE_ID,	
				a.ARTICLELOG_ID,	
				a.CHAPTER_NAME,	
				a.USERID,	
				a.USER_ID,	
				a.WEBCHAT_ID,	
				a.CREATE_TIME,	
				a.FEE
		from 
				TB_ARTICLE_CHAPTERLOG a
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
				a.ARTICLE_CHAPTERLOG_ID,	
				a.ARTICLE_ID,	
				a.ARTICLELOG_ID,	
				a.CHAPTER_NAME,	
				a.USERID,	
				a.USER_ID,	
				a.WEBCHAT_ID,	
				a.CREATE_TIME,	
				a.FEE
		from 
				TB_ARTICLE_CHAPTERLOG a
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from TB_ARTICLE_CHAPTERLOG
		where 
			ARTICLE_CHAPTERLOG_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 获取指定书籍，指定时间内的数据 -->
	<select id="bookcountdata" parameterType="pd" resultType="pd">
		select 
			count(USERID) USERS,	
			sum(FEE) FEES
		from 
			TB_ARTICLE_CHAPTERLOG
		where 
			ARTICLE_ID = #{ARTICLE_ID}
			<if test="CREATE_TIME!=null and CREATE_TIME!=''">
				and CREATE_TIME LIKE CONCAT(CONCAT('', #{CREATE_TIME}),'%')
			</if>
	</select>
	
</mapper>